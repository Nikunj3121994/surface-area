<!DOCTYPE html>
<script>
function calculate()
{
  var input1 = parseFloat(document.getElementById("input1").value);
  var input2 = parseFloat(document.getElementById("input2").value);
  
   if(input1<0 || input2<0){
                 document.getElementById("warning").innerHTML = "Please enter a positive value.......";
               }
   if(input1>=0&& input2>=0){
                   document.getElementById("warning").innerHTML = "";
                   }


for(var i=0;i<input1unit.options.length;i++)
    {
	  if(input1unit.options[i].selected) input1unitid = i;
    }

for(var i=0;i<input2unit.options.length;i++)
    {
	  if(input2unit.options[i].selected) input2unitid = i;
    }

	scale = [1,0.3048,0.01,0.001,0.0254];

var midinput1 = input1*scale[input1unitid];
var midinput2 = input2*scale[input2unitid];


var midoutput1 = 3.14159*midinput1*midinput1;


var b = (midinput1*midinput1)+(midinput2*midinput2);
var l = Math.sqrt(b);

var midoutput2 = 3.14159*midinput1*l;

var midoutput3 = midoutput1+midoutput2;


for(var i=0;i<value1unit.options.length;i++)

    {
	  if(value1unit.options[i].selected) value1unitid = i;
	  }
for(var i=0;i<value2unit.options.length;i++)

    {
	  if(value2unit.options[i].selected) value2unitid = i;
	  }
for(var i=0;i<value3unit.options.length;i++)

    {
	  if(value3unit.options[i].selected) value3unitid = i;
	  }

	  scale1 = [1,0.09290304,1E-4,1E-6,6.4516E-4];

var output1 = midoutput1/scale1[value1unitid];
var output2 = midoutput2/scale1[value2unitid];
var output3 = midoutput3/scale1[value3unitid];

document.getElementById('value1').value = output1;
document.getElementById('value2').value = output2;
document.getElementById('value3').value = output3;

}
</script>
